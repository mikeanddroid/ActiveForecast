<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <com.mike.givemewingzz.activeforecast.swipetorefresh.SwipeLayoutLinearChild
            android:id="@+id/swipe_linear_child"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/baseRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ff003141"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/temp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/city_id"
                    android:layout_alignRight="@+id/txt_stanje"
                    android:layout_below="@+id/city_id"
                    android:layout_marginTop="5.0dip"
                    android:text="Temp"
                    android:textColor="#ffffffff"
                    android:textSize="40.0sp" />

                <ImageView
                    android:id="@+id/img_glavna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearLayout1"
                    android:layout_below="@+id/temp_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img01d" />

                <TextView
                    android:id="@+id/city_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_glavna"
                    android:layout_alignParentTop="true"
                    android:text="City"
                    android:textColor="#ffffffff"
                    android:textSize="35.0sp" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:baselineAligned="false"
                    android:weightSum="3.0">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/day_tomm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:maxLength="3"
                            android:paddingTop="10.0dip"
                            android:text="Day"
                            android:textColor="#ffffffff"
                            android:textSize="20.0sp" />

                        <ImageView
                            android:id="@+id/img_dan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img01n" />

                        <TextView
                            android:id="@+id/max_temp_min_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="0.0dip"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1.0"
                            android:hint="Max/Min"
                            android:paddingBottom="10.0dip"
                            android:textColor="#fff3f3f3"
                            android:textSize="18.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/day_after_tomm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:maxLength="3"
                            android:paddingTop="10.0dip"
                            android:text="Day"
                            android:textColor="#ffffffff"
                            android:textSize="20.0sp" />

                        <ImageView
                            android:id="@+id/img_dan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img11d" />

                        <TextView
                            android:id="@+id/max_temp_min_temp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1.0"
                            android:hint="Max/Min"
                            android:textColor="#fff3f3f3"
                            android:textSize="18.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/day_after_tomm_tomm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:maxLength="3"
                            android:paddingTop="10.0dip"
                            android:text="Day"
                            android:textColor="#ffffffff"
                            android:textSize="20.0sp" />

                        <ImageView
                            android:id="@+id/img_dan3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img13n" />

                        <TextView
                            android:id="@+id/max_temp_min_temp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1.0"
                            android:hint="Max/Min"
                            android:textColor="#fff3f3f3"
                            android:textSize="18.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/temp_id"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/city_id"
                    android:layout_marginRight="16.0dip"
                    android:orientation="vertical"
                    android:weightSum="3.0">

                    <TextView
                        android:id="@+id/txt_tlak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1.0"
                        android:drawablePadding="10.0dip"
                        android:drawableRight="@drawable/e2"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />

                    <TextView
                        android:id="@+id/txt_vlaznost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1.0"
                        android:drawablePadding="10.0dip"
                        android:drawableRight="@drawable/d1"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />

                    <TextView
                        android:id="@+id/txt_brzina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1.0"
                        android:drawablePadding="10.0dip"
                        android:drawableRight="@drawable/wind"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_stanje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearLayout1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10.0dip"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </RelativeLayout>
        </com.mike.givemewingzz.activeforecast.swipetorefresh.SwipeLayoutLinearChild>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>